<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_nick"
        style="@style/TextInputStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/normal_indent"
        android:hint="@string/nick"
        app:counterEnabled="true"
        app:counterMaxLength="@integer/maxLengthNick"
        app:layout_constraintEnd_toStartOf="@id/btn_refresh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_nick"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/pb_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/normal_indent"
        android:indeterminate="true"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/til_nick"
        app:layout_constraintTop_toTopOf="@id/til_nick" />

    <ImageView
        android:id="@+id/iv_ok"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_ok"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/pb_nick"
        app:layout_constraintEnd_toEndOf="@id/pb_nick"
        app:layout_constraintStart_toStartOf="@id/pb_nick"
        app:layout_constraintTop_toTopOf="@id/pb_nick" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_refresh"
        android:layout_width="50dp"
        android:layout_height="70dp"
        app:icon="@drawable/ic_refresh"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/normal_indent"
        app:iconSize="50dp"
        app:iconTint="?attr/colorOnSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_games"
        android:layout_width="match_parent"
        android:layout_height="@dimen/games_list_height"
        android:layout_marginTop="@dimen/normal_indent"
        android:paddingBottom="@dimen/normal_indent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_nick" />

    <View
        android:id="@+id/v_block"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/translucent_bg"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@id/rv_games"
        app:layout_constraintEnd_toEndOf="@id/rv_games"
        app:layout_constraintStart_toStartOf="@id/rv_games"
        app:layout_constraintTop_toTopOf="@id/rv_games" />

    <ProgressBar
        android:id="@+id/pb_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/rv_games"
        app:layout_constraintEnd_toEndOf="@id/rv_games"
        app:layout_constraintStart_toStartOf="@id/rv_games"
        app:layout_constraintTop_toTopOf="@id/rv_games" />

</androidx.constraintlayout.widget.ConstraintLayout>