<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_nick"
        style="@style/TextInputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nick"
        app:counterEnabled="true"
        app:counterMaxLength="@integer/maxLengthNick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_nick"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/l_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_indent"
        android:background="@drawable/field_with_border"
        android:orientation="vertical"
        android:padding="@dimen/normal_indent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_nick">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/big_indent"
            android:padding="@dimen/normal_indent" />

        <SeekBar
            android:id="@+id/sb_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_indent"
            android:max="2"
            android:progress="0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_fieldsize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_indent"
        android:background="@drawable/field_with_border"
        android:orientation="vertical"
        android:padding="@dimen/normal_indent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/l_level">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_fieldsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/big_indent"
            android:padding="@dimen/normal_indent" />

        <SeekBar
            android:id="@+id/sb_fieldsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_indent"
            android:max="12"
            android:progress="1" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/l_fieldsize" />

</androidx.constraintlayout.widget.ConstraintLayout>