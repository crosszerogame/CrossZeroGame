<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CrossZeroGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#015F57</item>
        <item name="colorPrimaryVariant">#00302C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#03A9F4</item>
        <item name="colorSecondaryVariant">#015A82</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <item name="translucent_bg">@color/translucent_black</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
    </style>
</resources>