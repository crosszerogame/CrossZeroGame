<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/bg_sections_v"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_indent"
            android:orientation="vertical"
            android:paddingStart="@dimen/normal_indent"
            android:paddingEnd="@dimen/normal_indent"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_single_launch"
                style="@style/ButtonCheck"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:insetTop="0dp"
                android:padding="0dp"
                android:insetBottom="0dp"
                android:text="@string/single_game" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_remote_launch"
                style="@style/ButtonCheck"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/create_remote" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_remote_connect"
                style="@style/ButtonCheck"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/connect" />

        </com.google.android.material.button.MaterialButtonToggleGroup>
    </ScrollView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/normal_indent"
        android:paddingTop="@dimen/normal_indent"
        android:paddingEnd="@dimen/normal_indent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bg_sections_v"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/container_single_launch"
            layout="@layout/layout_single_launcher" />

        <include
            android:id="@+id/container_remote_launch"
            layout="@layout/layout_remote_launcher" />

        <include
            android:id="@+id/container_remote_connect"
            layout="@layout/layout_remote_connector" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>