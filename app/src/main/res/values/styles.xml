<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonCheck">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:backgroundTint">@color/checkbutton_bg</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:backgroundTint">@color/button_bg</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:paddingEnd">@dimen/normal_indent</item>
        <item name="buttonTint">?attr/colorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/box_stroke</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:imeOptions">actionGo</item>
    </style>
</resources>